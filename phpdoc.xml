<?xml version="1.0" encoding="UTF-8"?>

<phpdocumentor>
    <title>TeX Tools for PHP</title>
    <parser>
        <default-package-name>CornyPhoenix\Tex</default-package-name>
        <encoding>utf-8</encoding>
        <target>doc</target>
        <markers>
            <item>TODO</item>
            <item>FIXME</item>
        </markers>
        <extensions>
            <extension>php</extension>
        </extensions>
    </parser>
    <files>
        <directory>src</directory>
    </files>
    <transformer>
        <target>doc</target>
    </transformer>
    <logging>
        <level>warn</level>
        <paths>
            <default>{APP_ROOT}/data/log/{DATE}.log</default>
            <errors>{APP_ROOT}/data/log/{DATE}.errors.log</errors>
        </paths>
    </logging>
    <transformations>
        <template name="clean"/>
    </transformations>
</phpdocumentor>
